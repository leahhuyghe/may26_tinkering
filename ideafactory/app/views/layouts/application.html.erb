<!DOCTYPE html>
<html>
<head>
  <title>Ideafactory</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
<% if user_signed_in? %>
    Hello <%= current_user.first_name %>, <%= link_to "Log out", sessions_path, method: :delete, data: {confirm: "Are you sure you want to log out?"} %>
<% else %>
    <%= link_to "Log in", new_session_path, class: "btn btn-primary" %>
    <%= link_to "Sign up", new_user_path, class: "btn btn-primary" %>
<% end %>
</nav>

<%= yield %>

</body>
</html>
