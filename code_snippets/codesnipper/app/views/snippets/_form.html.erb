<% if @snippet.errors.any? %>
    <ul>
    <% @snippet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%# form_for :snippet, url: snippet_path(@snippet), method: :patch do |f| %>
<%= form_for @snippet do |f| %>

  <tr>
    <td><%= f.label :category %></td>
    <td><%= f.collection_select :category_id, Category.all, :id, :name %></td>
    <br>
    <td><%= f.label :title %></td>
    <td><%= f.text_field :title %></td>
    <br>
    <td><%= f.label :code %></td>
    <td><%= f.text_area :code %></td>
    <br>
    <td><%= f.submit 'Save' %></td>

</tr>
<% end %>
